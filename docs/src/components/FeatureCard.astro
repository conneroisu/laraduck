---
interface Props {
  title: string;
  icon?: string;
  description: string;
  link?: string;
  linkText?: string;
  badge?: string;
  badgeVariant?: 'new' | 'beta' | 'deprecated';
}

const { title, icon, description, link, linkText = 'Learn more', badge, badgeVariant = 'new' } = Astro.props;
---

<div class="feature-card card-hover">
  <div class="feature-card-header">
    {icon && <span class="feature-icon">{icon}</span>}
    <h3>{title}</h3>
    {badge && <span class={`badge ${badgeVariant}`}>{badge}</span>}
  </div>
  <p>{description}</p>
  {link && (
    <a href={link} class="feature-link">
      {linkText}
      <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
        <path d="M5 12h14M12 5l7 7-7 7"/>
      </svg>
    </a>
  )}
</div>

<style>
  .feature-card {
    background: var(--sl-color-bg-nav);
    border: 1px solid var(--sl-color-gray-6);
    border-radius: 1rem;
    padding: 2rem;
    height: 100%;
    display: flex;
    flex-direction: column;
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  }

  .feature-card:hover {
    transform: translateY(-4px);
    box-shadow: var(--shadow-xl);
    border-color: var(--sl-color-accent);
  }

  .feature-card-header {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    margin-bottom: 1rem;
  }

  .feature-icon {
    font-size: 2rem;
    display: flex;
    align-items: center;
    justify-content: center;
    width: 3rem;
    height: 3rem;
    background: var(--gradient-subtle);
    border-radius: 0.75rem;
  }

  h3 {
    margin: 0;
    flex: 1;
    color: var(--sl-color-accent);
    font-size: 1.25rem;
  }

  p {
    color: var(--sl-color-gray-2);
    line-height: 1.7;
    flex: 1;
    margin-bottom: 1.5rem;
  }

  .feature-link {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    color: var(--sl-color-accent);
    text-decoration: none;
    font-weight: 600;
    transition: gap 0.2s ease;
    margin-top: auto;
  }

  .feature-link:hover {
    gap: 0.75rem;
    text-decoration: underline;
  }

  .feature-link svg {
    transition: transform 0.2s ease;
  }

  .feature-link:hover svg {
    transform: translateX(4px);
  }

  .badge {
    padding: 0.25rem 0.75rem;
    border-radius: 2rem;
    font-size: 0.75rem;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .badge.new {
    background: var(--duck-teal);
    color: white;
  }

  .badge.beta {
    background: var(--duck-orange);
    color: white;
  }

  .badge.deprecated {
    background: #f44336;
    color: white;
  }
</style>