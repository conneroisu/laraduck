#!/usr/bin/env bash
set -e
if [[ ! -d "/Users/connerohnesorge/Documents/001Repos/laraduck" ]]; then
  echo "Cannot find source directory; Did you move it?"
  echo "(Looking for "/Users/connerohnesorge/Documents/001Repos/laraduck")"
  echo 'Cannot force reload with this script - use "direnv reload" manually and then try again'
  exit 1
fi

# rebuild the cache forcefully
_nix_direnv_force_reload=1 direnv exec "/Users/connerohnesorge/Documents/001Repos/laraduck" true

# Update the mtime for .envrc.
# This will cause direnv to reload again - but without re-building.
touch "/Users/connerohnesorge/Documents/001Repos/laraduck/.envrc"

# Also update the timestamp of whatever profile_rc we have.
# This makes sure that we know we are up to date.
touch -r "/Users/connerohnesorge/Documents/001Repos/laraduck/.envrc" "/Users/connerohnesorge/Documents/001Repos/laraduck/.direnv"/*.rc
